# Production Environment Variables
# This file contains production-specific settings

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=False

# Render.com specific
RENDER=true

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Security (these should be set in Render dashboard)
# SECRET_KEY=your-secret-key-here
# DATABASE_URL=your-database-url-here

# Performance
WORKERS=4
TIMEOUT=120
MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
ACCESS_LOG=true
ERROR_LOG=true
